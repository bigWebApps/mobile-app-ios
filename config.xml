<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.bigwebapps.helpdesk"
        versionCode="10"
        version   = "1.0.0"><!-- versionCode is optional and Android only -->

	    <access origin="*" />
	
	    <name>HelpDesk</name>
	
	    <description>
	        HelpDesk by bigWebApps mobile version.  Create, Read and respond tickets sent through your HelpDesk by bigWebApps account.  http://helpdesk.bigwebapps.com 
	    </description>
	
	    <author href="http://helpdesk.bigwebapps.com" email="support@bigwebapps.com">
	        bigWebApps
	    </author>
		
		<preference name="orientation" value="portrait" />
		<preference name="target-device" value="handset" />
		<preference name="prerendered-icon" value="true" />
		<preference name="webviewbounce" value="false" />
		<preference name="show-splash-screen-spinner" value="false" />	
		
		<!-- IOS only icons -->
		<icon src="img/icons/ios/icon.png" gap:platform="ios" width="57" height="57" />
		<icon src="img/icons/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
		<icon src="img/icons/ios/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
		
		<!-- IOS only splash screens -->
		<gap:splash src="img/splash/ios/Default.png" width="320" height="480" />
		<gap:splash src="img/splash/ios/Default_at_2x.png" width="640" height="960" />
		
		<!-- Android Specific -->
		<preference name="android-minSdkVersion" value="8" />
		<preference name="android-installLocation" value="internalOnly" />

		<!-- Android Icons -->
		<icon src="icon_at_2x.png" />
		<icon src="img/icons/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
		<icon src="img/icons/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
		<icon src="img/icons/android/hdpi.png" gap:platform="android" gap:density="hdpi" />

		<!-- Android Splash -->
		<gap:splash src="img/splash/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
		<gap:splash src="img/splash/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
		<gap:splash src="img/splash/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
		
		
		<!-- Enable phonegap features -->
		<feature name="http://api.phonegap.com/1.0/file"/>
		<feature name="http://api.phonegap.com/1.0/network"/>
		<feature name="http://api.phonegap.com/1.0/notification"/>
	
	</widget>