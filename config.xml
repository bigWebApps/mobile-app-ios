<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.bigwebapps.helpdesk"
        version   = "2.0.0">

	    <access origin="*" />
	
	    <gap:platforms>
	        <gap:platform name="ios"/>
	    </gap:platforms>
	
	    <name>HelpDesk</name>
	
	    <description>
	        HelpDesk by bigWebApps mobile version.  Create, Read and respond tickets sent through your HelpDesk by bigWebApps account.  http://helpdesk.bigwebapps.com 
	    </description>
	
	    <author href="http://helpdesk.bigwebapps.com" email="support@bigwebapps.com">
	        bigWebApps
	    </author>
		
		<preference name="phonegap-version" value="2.9.0" />
		<preference name="orientation" value="portrait" />
		<preference name="target-device" value="handset" />
		<preference name="prerendered-icon" value="true" />
		<preference name="webviewbounce" value="false" />	
		
		<!-- IOS only icons -->
		<icon src="img/icons/ios/icon.png" gap:platform="ios" width="57" height="57" />
		<icon src="img/icons/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
		<icon src="img/icons/ios/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
		
		<!-- IOS only splash screens -->
		<gap:splash src="img/splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
		<gap:splash src="img/splash/ios/Default_at_2x.png" gap:platform="ios" width="640" height="960" />
                <gap:splash src="img/splash/ios/Default_iphone5.png" gap:platform="ios" width="640" height="1136" />
		
		
		<!-- Enable phonegap features -->
		<feature name="http://api.phonegap.com/1.0/file"/>
		<feature name="http://api.phonegap.com/1.0/network"/>
		<feature name="http://api.phonegap.com/1.0/notification"/>

                <plugins>
                  <plugin name="InAppBrowser" value="CDVInAppBrowser" />
                </plugins>
	
	</widget>